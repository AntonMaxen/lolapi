<% include partials/header %>
<div class="container">
    <div class="jumbotron padder">
        <div class="row">
            <div class="col-sm-3">
                <h2 class=""><a href="/search/<%= profileInfo.accountData.name %>"><i class="material-icons">keyboard_arrow_left</i> Alla profiler</a></h2>
            </div>
            <div class="col-sm-6">
                <h2 class="text-center">Profilinformation f√∂r: <strong><%= profileInfo.accountData.name %></strong>(<%= profileInfo.accountData.realm %>)</h2>
            </div>
            <div class="col-sm-3">
                <h2 class="text-right"><a href="/summoner/<%= profileInfo.accountData.realm %>/<%= profileInfo.accountData.name %>/matchhistory">history <i class="material-icons">keyboard_arrow_right</i></a></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h4 class="text-center">SummonerLevel: <strong><%= profileInfo.accountData.summonerLevel %></strong></h4>
                <h4 class="text-center">totalMasteryLevel: <strong><%= profileInfo.totalMasteryLevel %></strong></h4>
            </div>
        </div>

    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th class="text-center" scope="col">ChampionImage</th>
                <th class="text-center" scope="col">championName</th>
                <th class="text-center" scope="col">lvl</th>
                <th class="text-center" scope="col">LastPlayed</th>
            </tr>
        </thead>
        <tbody>
            <% profileInfo.championMasteries.forEach(function(champion) { %>
                <tr>
                    <td class="text-center align-middle"><img height="80" width="80" src="http://ddragon.leagueoflegends.com/cdn/<%= profileInfo.version %>/img/champion/<%= champion.champion.image.full %>"></td>
                    <td class="text-center align-middle"><h3><%= champion.champion.name %></h3></td>
                    <td class="text-center align-middle"><h3><%= champion.championLevel %></h3></td>
                    <td class="text-center align-middle"><h3><%= new Date(champion.lastPlayTime).toLocaleDateString("default", {day: 'numeric', month: 'short', year: 'numeric'}); %></h3></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<% include partials/footer %>
